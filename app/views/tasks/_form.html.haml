= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message
  .actions
    = f.text_field :name
    %br
    = f.text_area :content
    %br
    = f.datetime_select :task_from ,:use_month_numbers => true
    %br
    = f.datetime_select :task_to ,:use_month_numbers => true
    %br
    = f.submit
